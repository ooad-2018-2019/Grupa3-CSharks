@model SeekAndFind.Models.RadnoIskustvo

@{
    ViewData["Title"] = "Create";
}

<h2>Dodavanje radnog iskustva</h2>

<h4>RadnoIskustvo </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ZanimanjeId" class="control-label"></label>
                <select asp-for="ZanimanjeId" class ="form-control" asp-items="ViewBag.ZanimanjeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Kompanija" class="control-label"></label>
                <input asp-for="Kompanija" class="form-control" />
                <span asp-validation-for="Kompanija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumPocetka" class="control-label"></label>
                <input asp-for="DatumPocetka" class="form-control" />
                <span asp-validation-for="DatumPocetka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumKraja" class="control-label"></label>
                <input asp-for="DatumKraja" class="form-control" />
                <span asp-validation-for="DatumKraja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
