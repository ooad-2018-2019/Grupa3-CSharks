@model SeekAndFind.Models.ViewModels.TopOglas

@{
    ViewData["Title"] = "Pocetna strana";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/StaticFiles/POKUSAJ.jpg" height="554" ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Pronađite praksu kakvu želite.
                    <a class="btn btn-default" href='@Url.Action("About", "Home")'>
                        Saznajte više
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/StaticFiles/wall3.jpg" height="554" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Pronađite sposobnu radnu snagu.
                    <a class="btn btn-default" href='@Url.Action("About", "Home")'>
                        Saznajte više
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/StaticFiles/wall5.jpg" height="554" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Pratite i prijavite se na oglas.
                    <a class="btn btn-default" href='@Url.Action("Index", "Oglas")'>
                        Saznajte više
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@if (Model.Oglasi != null)
{
<div class="row">
    <div class="col-md-3">
        <h2>Trending</h2>
        <ul>
            <li>Aktuelni oglasi</li>
        </ul>
    </div>
  
      @foreach (Oglas o in Model.Oglasi)
      {  
<div class="col-md-3">
   
    <shadow>

        <hr />
        <h4>@o.Naziv</h4>
        <ul>
            <li> @o.Zanimanje.Naziv </li>
            <li> @o.Opis </li>
            <li> @o.Grad </li>

            @if (Model.Korisnik != null)
            {
                <li>@Html.ActionLink("Saznaj više", "Details", "Oglas", new { id = o.OglasId })</li>}
            @if (Model.Korisnik == null)
            {
                <li>@Html.ActionLink("Saznaj više", "Login", "Home",new { idOglasa = o.OglasId })</li>}

        </ul>
    </shadow>
</div>
      }
</div>            
}
