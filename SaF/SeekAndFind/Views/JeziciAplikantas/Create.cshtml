@model SeekAndFind.Models.JeziciAplikanta

@{
    ViewData["Title"] = "Create";
}

<h2>Dodavanje jezika</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JezikId" class="control-label"></label>
                <select asp-for="JezikId" class ="form-control" asp-items="ViewBag.JezikId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NivoCitanja" class="control-label"></label>
                <input asp-for="NivoCitanja" class="form-control" />
                <span asp-validation-for="NivoCitanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NivoPisanja" class="control-label"></label>
                <input asp-for="NivoPisanja" class="form-control" />
                <span asp-validation-for="NivoPisanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
